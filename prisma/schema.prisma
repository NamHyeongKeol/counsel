// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String             @id @default(cuid())
  email            String?            @unique
  name             String?
  nickname         String? // 댓글 작성시 표시될 닉네임
  gender           String? // "male" | "female"
  age              Int? // 나이
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  conversations    Conversation[]
  comments         CharacterComment[]
  messageReactions MessageReaction[]
  messageFeedbacks MessageFeedback[]
}

model Conversation {
  id           String     @id @default(cuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  characterId  String?
  character    Character? @relation(fields: [characterId], references: [id])
  title        String?
  model        String     @default("gemini-3-flash-preview") // 선택된 AI 모델
  isDeleted    Boolean    @default(false)
  deleteLocked Boolean    @default(false) // 삭제 잠금
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  messages     Message[]

  @@index([userId])
  @@index([characterId])
}

model Message {
  id             String            @id @default(cuid())
  conversationId String
  conversation   Conversation      @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String // "user" | "assistant"
  content        String            @db.Text
  model          String? // 사용된 AI 모델명
  inputTokens    Int? // AI 요청 시 입력 토큰 수
  outputTokens   Int? // AI 응답 시 출력 토큰 수
  cost           Float? // 비용 (USD)
  isDeleted      Boolean           @default(false) // 소프트 삭제 플래그
  createdAt      DateTime          @default(now())
  reactions      MessageReaction[]
  feedbacks      MessageFeedback[]

  @@index([conversationId])
}

// 메시지 리액션 (좋아요/싫어요)
model MessageReaction {
  id        String   @id @default(cuid())
  messageId String
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // "like" | "dislike"
  createdAt DateTime @default(now())

  @@unique([messageId, userId]) // 한 유저당 하나의 리액션만
  @@index([messageId])
  @@index([userId])
}

// 메시지 피드백 (신고/의견)
model MessageFeedback {
  id        String   @id @default(cuid())
  messageId String
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String   @db.Text
  createdAt DateTime @default(now())

  @@index([messageId])
  @@index([userId])
}

// ======================================
// 캐릭터 (상담사) 시스템
// ======================================

model Character {
  id            String             @id @default(cuid())
  name          String // 캐릭터 이름 (예: "언니")
  slug          String             @unique // URL-friendly ID
  tagline       String? // 한줄 소개/대사
  introduction  String             @db.Text // 상담사 소개 문구
  age           Int? // 캐릭터 나이
  systemPrompt  String             @db.Text // AI 시스템 프롬프트
  greeting      String             @db.Text // 인트로 메시지
  isActive      Boolean            @default(true) // 관리자 활성화 여부
  isPublic      Boolean            @default(true) // 유저에게 공개 여부
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  images        CharacterImage[]
  comments      CharacterComment[]
  conversations Conversation[]

  @@index([isActive])
  @@index([isPublic])
}

model CharacterImage {
  id          String    @id @default(cuid())
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  imageUrl    String // 이미지 URL
  order       Int       @default(0) // 정렬 순서
  createdAt   DateTime  @default(now())

  @@index([characterId])
}

model CharacterComment {
  id          String    @id @default(cuid())
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  content     String    @db.Text
  isPrivate   Boolean   @default(false) // 비공개 댓글
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([characterId])
  @@index([userId])
}
